<div class="card mb-2">
    <div class="card-body py-2 px-3">
        <form id="formPublicacion" name="formPublicacion" method="post">
            <div class="d-flex">
                <div class="">
                    <a href="#">
                        <img class="rounded-circle" src="<%- user.urlImage %>" style="height: 45px; width: 45px; ">
                    </a>
                </div>
                <div class="flex-align-center pl-2 pr-0 flex-fill">
                    <textarea class="form-control js-auto-size" id="aup-post-text" name="aup-post-text" rows="1" placeholder="Escribe una publicaciÃ³n..."></textarea>
                </div>
            </div>
            <div class="collapse my-2" id="aup-post-collapse-upload-image">
              <input id="aup-post-file" name="aup-post-file" type="file" class="file" data-show-preview="false">
            </div>
            <div class="d-flex justify-content-end my-2">
                <a class="px-3" data-toggle="collapse" href="#aup-post-collapse-upload-image" role="button" aria-expanded="false"
                    aria-controls="aup-post-collapse-upload-image" style="font-size:1.5rem;"><i class="fas fa-image text-success"></i></a>
                <input type="submit" id="aup-post-add-post" class="btn btn-outline-success text-align-center px-3" value="Publicar">
            </div>
        </form>
    </div>
</div>
