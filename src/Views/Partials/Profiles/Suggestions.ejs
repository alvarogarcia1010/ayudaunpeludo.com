<div class="card mb-2">
    <div class="card-header space-between px-2">
        <div class="text-inline">
            <h5 class="card-title font-weight-bold m-0">Sugerencias</h5>
        </div>
        <div class="text-inline text-right">
            <a href="/api/users/" id="aup-refresh-suggestions" class="card-link text-success text-small">Actualizar</a>
            <a href="#" id="aup-view-all-users" class="card-link text-success text-small ml-1">Ver todas</a>
        </div>
    </div>
    <ul class="list-group list-group-flush text-lg-small" id="aup-list-suggestions">
        <% users.forEach(function(user) { %>
        <!-- Persona Sugerida -->
        <li class="list-group-item p-2">
            <%- include('./SugestedUser.ejs', {user}) %>
        </li>
        <!-- Fin de persona sugerida -->
        <% }); %>
    </ul>
</div>
