<!--VALIDACION FORM PARA CAMBIAR USERNAME-->
<form class="form form-vertical" action="/api/update-user" method="post" enctype="multipart/form-data" id="form-upload-picture">
  <div class="row">
      <div class="col-sm-4 offset-md-4 text-center">
          <div class="kv-avatar">
              <div class="file-loading">
                  <input id="avatar-1" name="file" id = "avatar-1" type="file" data-browse-on-zone-click="true" required>
              </div>
          </div>
          <div class="kv-avatar-hint"><small>Select file < 1500 KB</small></div>
      </div>
  </div>
  <div class="d-flex justify-content-center">
    <button type="submit" id="save-profile-picture" class="btn btn-success">Guardar foto</button>
  </div>
</form>
<form class="form form-vertical" action="/api/update-user" method="put">
    <div class="row">
        <div class="col-sm-12 scrollbar">
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <label for="name">Nombre<span class="kv-reqd"></span></label>
                <input type="text" id ="name" class="form-control" name="name" required>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <label for="surname">Apellido<span class="kv-reqd"></span></label>
                <input type="text" id="surname" class="form-control" name="surname" required>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-4">
              <div class="form-group">
                <label for="username">Username<span class="kv-reqd"></span></label>
                <input type="text" id="username" class="form-control" name="username" required>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <label for="birthday">Fecha de Nacimiento<span class="kv-reqd"></span></label>
                <input id="datepicker" width="225" name="birthday"/>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <label for="pais">Pais<span class="kv-reqd"></span></label>
                <select class="js-example-basic-single" name="pais" id="pais">
                  <option value="ES">El Salvador</option>
                  <option value="BL">Belice</option>
                  <option value="CR">Costa Rica</option>
                  <option value="GU">Guatemala</option>
                  <option value="ES">El Salvador</option>
                  <option value="NC">Nicaragua</option>
                  <option value="PN">Panama</option>
                </select>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <label for="sobremi">Sobre mi:<span class="kv-reqd"></span></label>
                <textarea name="sobremi" id="sobremi" cols="20" rows="5" class="w-100"></textarea>
              </div>
            </div>
          </div>
          <div class="form-group">
            <hr>
            <div class="text-right">
              <button type="submit" id="btn-update-profile" class="btn btn-success">Actualizar perfil</button>
            </div>
          </div>
        </div>
    </div>
</form>